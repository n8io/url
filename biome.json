{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 120,
		"formatWithErrors": false
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "es5"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"recommended": true
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"overrides": [
		{
			"ignore": [
				"**/.changeset/**",
				"**/.dist/**",
				"**/node_modules/**"
			]
		}
	]
}